<%= form_with url: cancancan_posts_path, model: post  do |form| %>
  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :content %><br>
    <%= form.text_area :content %><br>
  </div>

  <div>
    <%= form.label :published %><br>
    <%= form.check_box :published, value: true  %><br>
  </div>


  <div>
    <%= form.submit %>
  </div>
<% end %>

