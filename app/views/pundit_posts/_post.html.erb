<turbo-frame id=<%= post.id %> class="post">
  <h3>
    <%= post.title %>
    <% unless post.published %>
      <span><em> (draft)</em></span>
    <% end %>
  </h3>
  <p><%= post.content%></p>
  <br>
  <% if policy(post).update? %>
    <%= link_to "Edit", edit_pundit_post_path(post) %>
  <% end %>
  <% if policy(post).destroy? %>
    <%= link_to 'Delete', pundit_post_path(post), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } %>
  <% end %>
</turbo-frame>
